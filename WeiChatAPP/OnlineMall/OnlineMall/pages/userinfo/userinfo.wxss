.userinfo-container {
	background-color: #f5f5f5;
	min-height: 100vh;
}

.info-item {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 30rpx;
	background-color: #fff;
	border-bottom: 1rpx solid #eee;
}

.label {
	font-size: 28rpx;
	color: #333;
}

.value-wrapper {
	display: flex;
	align-items: center;
}

.value {
	font-size: 28rpx;
	color: #666;
	margin-right: 10rpx;
}

.avatar {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	margin-right: 10rpx;
}

.arrow {
	color: #999;
	font-size: 28rpx;
} 